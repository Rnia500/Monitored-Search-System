extends layout

block content
    .container.text-center.mt-5
        // Hero Section with Welcome Text
        h1.text-primary.fw-bold Welcome to My Home Page
        p.lead.text-muted Explore, Search, and Connect with Ease.
        
        // Hero Image
        .row.mt-4
            .col-md-8.offset-md-2
                img(src="/Monitrack.png", alt="Home Banner" style = "width: 120px;")

        // Info Section
        .row.mt-5
            .col-md-4
                .card.shadow-lg.border-0
                    .card-body
                        h3.text-success Search Anything
                        p Easily find what you're looking for with our powerful search engine.
                        a.btn.btn-primary.btn-lg.mt-2(href="/search") üîç Start Searching
            .col-md-4
                .card.shadow-lg.border-0
                    .card-body
                        h3.text-danger Secure Login
                        p Access your account securely with multi-factor authentication.
                        a.btn.btn-success.btn-lg.mt-2(href="/login") üîë Login Now
            .col-md-4
                .card.shadow-lg.border-0
                    .card-body
                        h3.text-warning Connect
                        p Connect to a device via Bluetooth for localization.
                        button.btn.btn-warning.btn-lg.mt-2#connect-btn Connect to Device
            .container
                    #map(style="height: 300px; width: 100%;")

        // Features Section
        .row.mt-5
            .col-md-6
                i.bi.bi-speedometer2.display-4.text-primary
                h4 Fast & Reliable
                p Enjoy lightning-fast performance and seamless navigation.
            .col-md-6
                i.bi.bi-shield-lock.display-4.text-danger
                h4 Secure & Private
                p Your data is encrypted and protected with top-tier security.

        // Call to Action
        .row.mt-5
            .col.text-center
                a.btn.btn-outline-dark.btn-lg.px-5.py-3(href="/explore") üöÄ Explore Now
block scripts
    script(src="/script.js")
block scripts
    link(rel="stylesheet", href="https://unpkg.com/leaflet@1.9.3/dist/leaflet.css")
    script(src="https://unpkg.com/leaflet@1.9.3/dist/leaflet.js")
    script(src="/script.js")


extends layout

block content
    .container 
        .row 
            .col-md-6.offset-md-3 
                h1.text-center Contact Us
                p.text-center Get in touch with us through this form.
                form(action="/contact", method="POST")
                    div.mb-3
                        label.form-label(for="name") Name:
                        input.form-control(type="text", name="name", placeholder="Enter your Name", required)
                    div.mb-3
                        label.form-label(for="email") Email:
                        input.form-control(type="email", name="email", placeholder ="Enter your Email", required)
                    div.mb-3
                        label.form-label(for="message") Message:
                        textarea.form-control(name = "Message" type="message", row = "4", placeholder = "Enter more details here...")

                    button.btn.btn-success(type="submit") Send
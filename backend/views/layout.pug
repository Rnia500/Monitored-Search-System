    style.
        .card {
            border: 2px solid #007bff;
            box-shadow: 0 4px 8px rgba(0, 123, 255, 0.2);
            border-radius: 10px; /* Rounded corners for a modern look */
            transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease; /* Smooth transitions */
            overflow: hidden; /* Ensure content doesn't overflow */
            background-color: #ffffff; /* White background */
        }

        .card:hover {
            transform: translateY(-5px) scale(1.02); /* Slight upward displacement and scaling */
            box-shadow: 0 8px 16px rgba(0, 123, 255, 0.3); /* Deeper shadow on hover */
            border-color: #0056b3; /* Darker border color on hover */
        }

        .card img {
            transition: transform 0.3s ease; /* Smooth image scaling */
        }

        .card:hover img {
            transform: scale(1.05); /* Slight zoom effect on the image */
        }

        .card-body {
            padding: 1.5rem; /* Add more padding for better spacing */
        }

        .card-title {
            font-size: 1.25rem; /* Larger title */
            font-weight: bold; /* Bold title */
            color: #333; /* Darker text for better contrast */
        }

        .card-text {
            color: #666; /* Slightly lighter text for the description */
        }

        .btn-outline-primary {
            transition: background-color 0.3s ease, color 0.3s ease; /* Smooth button transition */
        }

        .btn-outline-primary:hover {
            background-color: #007bff; /* Solid background on hover */
            color: #fff; /* White text on hover */
        }
        

